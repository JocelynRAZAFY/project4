{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .list-group{
        margin-top: 3em;
    }
    .btn{
        margin-left: 1em;
    }
    .retour {
        margin-top: 2em;
    }
</style>

<div class="example-wrapper">
    <div class="jumbotron">
        <h1 class="display-4">Hello, {{ user.prenom }}</h1>
        <p class="lead">Bienvenu à la plateforme de gestion des horaires de présence</p>
        <hr class="my-4">
        <p>Choisir le type de votre présence </p>
        <div style="display: flex">
            <a href="{{ path('presence',{id: user.id, type: 'ponctuelle'}) }}" class="btn btn-primary btn-lg" href="#" role="button">Une présence ponctuelle</a>
            <a href="{{ path('presence',{id: user.id, type: 'recurrente'}) }}" class="btn btn-primary btn-lg" href="#" role="button">Une présence récurrente</a>
        </div>
        <a  href="{{ path('user') }}" class="btn btn-success btn-lg retour" href="#" role="button">Retour</a>
    </div>
</div>
{% endblock %}
