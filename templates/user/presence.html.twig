{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .list-group{
        margin-top: 3em;
    }
    .btn{
        margin-left: 1em;
    }
</style>

<div class="example-wrapper">
    {% if type == 'ponctuelle' %}
        <div class="jumbotron">
            <h1 class="display-4">Présence {{ type }}, {{ user.prenom }}</h1>
            <p class="lead">Bienvenu à la plateforme de gestion des horaires de présence</p>
            <hr class="my-4">
            <div style="display: flex; margin: 0 auto">
                <div>
                    <label for="appt">Heure début</label>
                    <input type="time" id="hBegin">
                </div>
                <div>
                    <label for="appt">Heure fin:</label>
                    <input type="time" id="hEnd">
                </div>
                <button type="button"
                        id="confirmePon"
                        class="btn btn-warning">Je confirme ma présence {{ "now"|date("m/d/Y") }}</button>
            </div>
            {#        <p>Choisir le type de votre présence </p>#}
                    <div style="display: flex;margin-top: 2em">
                        <a href="{{ path('gestion',{id: user.id}) }}" class="btn btn-primary btn-lg" href="#" role="button">Retour</a>
{#                        <a href="{{ path('presence_recurrente',{id: user.id}) }}" class="btn btn-primary btn-lg" href="#" role="button">Une présence récurrente</a>#}
                    </div>
        </div>
    {% else %}
            <div class="jumbotron">
                <h1 class="display-4">Présence {{ type }}, {{ user.prenom }}</h1>
                <p class="lead">Bienvenu à la plateforme de gestion des horaires de présence récurrente</p>
                <hr class="my-4">
                <div style="display: flex; margin: 0 auto">
                    <div>
                        <label for="appt">Heure début</label>
                        <input type="time" id="hBegin">
                    </div>
                    <div>
                        <label for="appt">Heure fin:</label>
                        <input type="time" id="hEnd">
                    </div>
                </div>
                <div style="display: flex; margin: 3em auto">
                    <div>
                        <label for="appt">Date début</label>
                        <input type="date" id="dBegin">
                    </div>
                    <div>
                        <label for="appt">Date Fin</label>
                        <input type="date" id="dEnd">
                    </div>
                </div>
                <button style="margin: 2em 32%;"
                        type="button"
                        id="confirmeRec"
                        class="btn btn-warning">Je confirme ma présence</button>

                        <div style="display: flex">
                            <a href="{{ path('gestion',{id: user.id}) }}" class="btn btn-success btn-lg" role="button">Retour</a>
                        </div>
            </div>
    {% endif %}


</div>
{% endblock %}
