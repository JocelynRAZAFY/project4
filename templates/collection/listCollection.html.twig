<section class="content-header">
    <h1>
        Collection list
        <small>list</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Ajouter une ligne &nbsp</h3>
                    <a href="{{ path('add_collection') }}" class="btn btn-default btn-add">
                        <i class="fa fa-plus"></i>
                    </a>
                </div>

                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Label</th>
                            <th>action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for group in groups %}
                            <tr id="line-{{ group.id }}">
                                <td>{{ group.label }}</td>
                                <td>
                                    <div class="form-group">
                                        <a href="{{ path('edit_collection',{'id': group.id}) }}" class="btn btn-default btn-edit" id="{{ group.id }}">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a href="#" class="btn btn-default btn-remove-collection" id="{{ group.id }}">
                                            <i class="fa fa-remove"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <th>Label</th>
                            <th>Action</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>

        <div class="hidden" id="dialogCollection" title="Suppression de collection">
            <p>
                <span class="ui-icon ui-icon-alert" style="float:left; margin:12px 12px 20px 0;"></span>
                Etes-vous sur de vouloir supprimer cette ligne ?
                <p id="infoCollection"></p>
            </p>
        </div>
        <!-- /.col -->
    </div>
</section>

