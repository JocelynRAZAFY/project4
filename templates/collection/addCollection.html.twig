<section class="content-header">
    <h1>
        Collection
        {#<small>advanced tables</small>#}
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
        <div class="row">
            <div class="col-md-6">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.label) }}
                </div>

                <div class="form-group"
                     id="detailListCollection"
                     data-prototype="{{ form_widget(form.detail.vars.prototype)|e('html_attr') }}">

                    {% for detail in form.detail %}
                        <div class="detail">
                            <div class="col-md-6">
                                {{ form_row(detail.lastName) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(detail.firstName) }}
                            </div>
                        </div>
                    {% endfor %}

                </div>
                {{ form_end(form) }}
            </div>
        </div>
        {#<div class="row" style="margin-top: 1em">#}
        {#<a href="{{ path('liste_collection') }}">Liste</a>#}
        {#</div>#}
</section>
