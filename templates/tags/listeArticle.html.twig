<section class="content-header">
    <h1>
        Articles
        <small>Liste</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Ajouter une ligne &nbsp;&nbsp; </h3>
                    <a href="{{ path('add_tag') }}" class="btn btn-default btn-add">
                        <i class="fa fa-plus"></i>
                    </a>
                </div>

                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Content</th>
                            <th>Tags</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for article in article.getAllArticle %}
                            <tr id="line-{{ article.id }}">
                                <td>{{ article.name }}</td>
                                <td>{{ article.content }}</td>
                                <td>{{ article.tags | join(',') }}</td>
                                <td>
                                    <div class="form-group">
                                        <a href="{{ path('edit_tag',{'id': article.id }) }}" class="btn btn-default btn-edit" id="{{ article.id }}">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-default btn-remove-article" id="{{ article.id }}">
                                            <i class="fa fa-remove"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Content</th>
                            <th>Tags</th>
                            <th>Action</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>

        <div class="hidden" id="dialogArticle" title="Suppression d'article">
            <p>
                <span class="ui-icon ui-icon-alert" style="float:left; margin:12px 12px 20px 0;"></span>
                Etes-vous sur de vouloir supprimer cette ligne ?
            <p id="infoArticle"></p>
            </p>
        </div>
        <!-- /.col -->
    </div>
</section>